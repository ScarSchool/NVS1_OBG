<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30px"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        
        <Image x:Name="imageView" Grid.Row="1" Panel.ZIndex="1"></Image>
        <Button Content="Select File" HorizontalAlignment="Left" Click="MenuItem_Click" VerticalAlignment="Center" Height="30" Width="100" BorderThickness="0" BorderBrush="{x:Null}"/>
        <TextBlock HorizontalAlignment="Center" Panel.ZIndex="0" Text="Please choose a file via the button on the top left" VerticalAlignment="Center"  Foreground="#FF787878" FontStyle="Italic" Grid.Row="1" />
    </Grid>
</Window>
